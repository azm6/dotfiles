    alacritty --class ncmpcpp -e ncmpcpp
	#urxvtc  -name ncmpcpp -e ncmpcpp

# Media player

# XF86AudioPlay exec cmus-remote -u
# XF86AudioPause exec
# XF86AudioNext exec cmus-remote -n
# XF86AudioPrev exec cmus-remote -r

super + alt + 9
	mpc --host=127.0.0.1 --port=6601 toggle

super + alt + 0
	mpc --host=127.0.0.1 --port=6601 next

super + alt + 8
	mpc --host=127.0.0.1 --port=6601 prev

# alsa controls

super + v
  amixer set Master 5%-

super + shift + v
  amixer set Master 5%+

XF86AudioMute 
  amixer set Master toggle

# Touchpad controls

XF86TouchpadToggle  
	/home/gwaka/scripts/toggletouchpad.sh

# Sreen brightness controls

XF86MonBrightnessUp  
	xbacklight -inc 5 # increase screen brightness
XF86MonBrightnessDown  
	xbacklight -dec 5 # decrease screen brightness

super + alt + 2  
	xbacklight -inc 5 # increase screen brightness
super + alt + 1
	xbacklight -dec 5 # decrease screen brightness
# wm independent hotkeys----------------------------

# terminal emulator
super + t
    alacritty
	#urxvtc

# program launcher
super + d
	rofi -show drun 

# emojies
super + shift + d
    rofi -show emoji -modi emoji

# Restart bspwm
super + shift + r
	bspc wm -r

# make sxhkd reload its configuration files:
super + r
	pkill -USR1 -x sxhkd


# bspwm hotkeys----------------------------

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
# super + y
	# bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
# super + g
# 	bspc node -s biggest


# state/flags----------------------------

# set the window state
super + shift + f
	bspc node -t {tiled,fullscreen}

super + f 
#	bspc node -t {floating,tiled}
  bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# set the node flags
# super + ctrl + {x,y,z}
# 	bspc node -g {locked,sticky,private}

# focus/swap----------------------------

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}


# focus the next/previous node in the current desktop
super + c
	bspc node -f next.local.window

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# presedlect----------------------------

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
# super + ctrl + shift + space
# 	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# move/resize----------------------------

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
