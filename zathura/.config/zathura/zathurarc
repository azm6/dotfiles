
#set statusbar-v-padding 0
#set page-padding 1

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map u toggle_fullscreen
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor

set statusbar false
set selection-notification false
set selection-clipboard clipboard
set font "roboto mono 11"
set pages-per-row 1
set statusbar-basename true
set page-padding 1

